@page
@model BeeCakeWeb.Pages.Admin.CakeTypes.DeleteModel

<form method="post">
    <input hidden asp-for="CakeType.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Cake Type</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="CakeType.Name"></label>
            <input asp-for="CakeType.Name" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
