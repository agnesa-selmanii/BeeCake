@page
@model BeeCakeWeb.Pages.Customer.Home.IndexModel

<div class="row container pb-3 backgroundWhite">
	@foreach (var category in Model.CategoryList)
	{
		<h2 class="text-dark pl-1" style="font-size:30px;"><b>@category.Name</b></h2>
		<div class="col-12">
			<div class="row my-3">
				@foreach (var menuItem in Model.MenuItemList.Where(u => u.CategoryId == category.Id))
				{

					<div class="col-lg-4 col-md-6 pb-4 filter">
						<div class="card bg-white rounded shadow-lg" style="border:none;">
							<div class="card-body pb-1 row">
								<div class="col-8 h5">@menuItem.Name</div>
								<div class="col-4 text-end"><span class="text-primary h4">$@menuItem.Price</span></div>
							</div>
							<img class="card-img-top img-fluid d-block mx-auto mb-3" src="@menuItem.Image" alt="menuitem image">
							<div class="card-body p-1 px-3 row">
								<div class="col-6">
									<span class="badge p-2 border rounded w-100  bg-primary " style="font-size:13px;">@menuItem.Category.Name</span>
								</div>
								<div class="col-6 border-0">
									<span class="badge p-2 border rounded w-100 bg-info " style="font-size:13px;">@menuItem.CakeType.Name</span>
								</div>
								<div class="col-12 pt-2" style="font-size:15px; text-align:justify">
									<p> @Html.Raw(menuItem.Description)</p>
								</div>
								<div class="col-12 p-1">
									<a asp-page="Details" asp-route-id="@menuItem.Id" class="btn btn-dark rounded form-control btn-sm p-2" style="height:40px; ">View Details</a>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	}
</div>
